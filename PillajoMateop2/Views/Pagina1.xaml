<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillajoMateop2.Views.Pagina1"
             Title="Recarga telefónica">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <Label Text="Ingrese el número de teléfono:"
                   x:Name="mpillajo_label1"
                   FontSize="Medium" />
            <Entry x:Name="mpillajo_entryPhoneNumber"
                   Keyboard="Telephone" />

            <Label Text="Ingrese el nombre de quien realiza la recarga:"
                   x:Name="mpillajo_label2"
                   FontSize="Medium" />
            <Entry x:Name="mpillajo_entryName" />

            <Label Text="La última recarga realizada fue:"
                   x:Name="mpillajo_label3"
                   FontSize="Medium" />
            <Label x:Name="mpillajo_labelLastRecharge"
                   FontSize="Small"
                   Text="Nombre: XXXXXXXX\nNúmero: XXXXXXXX" />

            <Button Text="Recargar"
                    x:Name="mpillajo_buttonRecharge"
                    BackgroundColor="Purple"
                    TextColor="White"
                    Clicked="OnRechargeClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>